{% extends 'base.html.twig' %}

{% block title %} Kira Symfony {% endblock %}

{% block body %}

  <form method="post">
      {% if error %}
          <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}

      <h1 class="h3 mb-3 mt-3 font-weight-normal">{{ 'user.loginTitle'|trans }}</h1>
      <label for="inputEmail">{{ 'Email'|trans }}</label>
      <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required>
      <label for="inputPassword">{{ 'Password'|trans }}</label>
      <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

      <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
      >

      <button class="btn btn-lg btn-primary mt-3" type="submit">
          {{ 'user.login'|trans }}
      </button>
  </form>
{% endblock %}
